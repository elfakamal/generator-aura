{
	"name": "my-awesome-scheme",
	"version": 1,
	"components": [
		{
			"name": "awesome-component",
			"type": "Backbone",
			"templates": [
				"base"
			],
			"baseTemplate": "base",
			"models": [
				"myModel"
			],
			"views": [
				{
					"name": "myView",
					"model": "myView"
				}
			],
			"collections": [
				{
					"name": "myCollection",
					"model": "myModel"
				}
			],
			"aura_listeners": {
				"my.collection.refresh": "onMyCollectionRefresh"
			}
		}
	]
}